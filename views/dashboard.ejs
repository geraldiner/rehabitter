<div class="w-4/5 bg-white p-4 rounded-md mx-auto space-y-4">
	<h4 class="text-sm font-bold uppercase">Dashboard</h4>
	<h2 class="text-xl">Hello, <%- user.firstName %></h2>
	<% if (habits.length> 0) { %>
	<p>Here's what you're working on:</p>

	<% habits.forEach(h => { %>
	<div class="">
		<div class="habit-item">
			<p>
				I want to change my habit of <%= h.name %>. It gives me <%= h.gives %>. But I can replace it with <%= h.replacement %>. So I will <%= h.change
				%> instead.
			</p>
			<div class="">
				<a href="/habits/edit/<%= h._id %>" class="text-sm habit-btn bg-green-600 hover:bg-green-900">edit</a>
				<form class="inline-block" action="/habits/<%= h._id %>" method="post">
					<input type="hidden" name="_method" value="DELETE" />
					<button type="submit" class="text-sm habit-btn bg-red-600 hover:bg-red-900">delete</button>
				</form>
			</div>
		</div>
	</div>

	<% }) %> <% } else { %>
	<p>You haven't added any habits yet.</p>
	<% } %>
	<div class="">
		<a class="add-btn" href="/habits/add">Add a new habit</a>
	</div>
</div>
