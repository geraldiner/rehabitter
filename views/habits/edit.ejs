<h4 class="text-2xl text-center mb-6 font-bold">Editing "<%= habit.name%>" habit</h4>
<div>
	<form action="/habits/<%= habit._id %>" method="POST">
		<input type="hidden" name="_method" value="PUT" />
		<div class="mb-4">
			<label class="block text-grey-darker text-sm mb-2" for="name">I want to change my habit of </label>
			<input class="border rounded w-full py-2 px-3 text-grey-darker" id="name" name="name" type="text" value="<%= habit.name%>" />
		</div>
		<div class="mb-4">
			<label class="block text-grey-darker text-sm mb-2" for="gives">It gives me </label>
			<input class="border rounded w-full py-2 px-3 text-grey-darker" id="gives" name="gives" type="text" value="<%= habit.gives %>" />
		</div>
		<div class="mb-4">
			<label class="block text-grey-darker text-sm mb-2" for="replacement">But I can replace it with </label>
			<input
				class="border rounded w-full py-2 px-3 text-grey-darker"
				id="replacement"
				name="replacement"
				type="text"
				value="<%= habit.replacement %>"
			/>
		</div>
		<div class="mb-6">
			<label class="block text-grey-darker text-sm mb-2" for="change">So I will </label>
			<input class="border rounded w-full py-2 px-3 text-grey-darker" id="change" name="change" type="text" value="<%= habit.change %>" />
		</div>
		<div class="flex items-center justify-center">
			<button class="add-btn" type="submit">Update Habit</button>
		</div>
	</form>
</div>
